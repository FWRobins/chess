<hr>
<h1 class="text-center">Upcoming Matches</h1>
<br>

<div class="card-columns">
  <% @matches.each do |match| %>
    <div class="card bg-light">
      <div class="card-body text-center">
        <h3 class="card-text"> <%= match.name %> </h3>
        <hr>
        <p class="card-text"> <%= Member.find(match.member1).name + " " + Member.find(match.member1).surname %> </p>
        <p class="card-text"> vs </p>
        <p class="card-text"> <%= Member.find(match.member2).name + " " + Member.find(match.member2).surname %> </p>
      </div>
    </div>
  <% end %>

</div>
<hr>

<h1>Leaderboard</h1>
<br>

<table class="table table-hover table-responsive">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Games</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.surname %></td>
        <td><%= member.games %></td>
        <td><%= member.rank %></td>
        <td><%= link_to 'Member Details', member %></td>
        <td><%= link_to 'Edit member', edit_member_path(member) %></td>
        <td><%= link_to 'Disband Member', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Create New Member', new_member_path, class:"btn btn-dark" %>
