


<h1>Members</h1>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Games</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.surname %></td>
        <td><%= member.email %></td>
        <td><%= member.birthday %></td>
        <td><%= member.games %></td>
        <td><%= member.rank %></td>
        <td><%= link_to 'Member Details', member %></td>
        <td><%= link_to 'Edit member', edit_member_path(member) %></td>
        <td><%= link_to 'Disband Member', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-dark">
  <%= link_to 'New Member', new_member_path %>
</div>
