<p id="notice"><%= notice %></p>
<hr>
<h1>Past Matches</h1>
<br>

<table class="table table-hover table-responsive">
  <thead class="thead-light">
    <tr>
      <th>Match Name</th>
      <th>Player 1</th>
      <th>Player 2</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.name %></td>
        <td><%= Member.find(match.member1).name %></td>
        <td><%= Member.find(match.member2).name %></td>
        <% result_hash = {"0"=> "Match Draw", "1"=> "Player 1 wins", "2"=> "Player 2 wins"} %>
        <td><%= result_hash[match.result.to_s] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Schedule New Match', new_match_path, class:"btn btn-dark" %>
<hr>
