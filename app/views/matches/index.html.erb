<p id="notice"><%= notice %></p>

<h1>Matches</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Member1</th>
      <th>Member2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.name %></td>
        <td><%= match.member1 %></td>
        <td><%= match.member2 %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Enter Match results', edit_match_path(match) %></td>
        <td><%= link_to 'Cancel Match', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
